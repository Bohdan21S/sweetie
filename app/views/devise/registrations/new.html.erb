<div class="signup-wrapper">
  <div class="signup-container">
    <h2 class="signup-title">Реєстрація</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "signup-form") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource, class: "signup-error-messages" %>

      <div class="signup-form-group">
        <%= f.label :email, 'Електронна пошта:', class: "signup-form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "signup-form-input" %>
      </div>

      <div class="signup-form-group">
        <%= f.label :password, 'Пароль:', class: "signup-form-label" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> символів мінімум)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "signup-form-input" %>
      </div>

      <div class="signup-form-group">
        <%= f.label :password_confirmation, 'Підтвердження паролю:', class: "signup-form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "signup-form-input" %>
      </div>

      <div class="signup-actions">
        <%= f.submit "Зареєструватися", class: "signup-btn signup-btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links", class: "signup-auth-links" %>
  </div>
</div>
