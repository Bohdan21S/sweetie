<h1>Products</h1>

<ul>
  <% @products.each do |product| %>
    <li>
      <%= image_tag product.image if product.image.attached? %>
      <%= link_to product.name, product_path(product) %>
      <p>Price: $<%= product.price %></p>
      <p>Category: <%= product.category.name %></p>
    </li>
  <% end %>
</ul>
