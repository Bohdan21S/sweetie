<div class="review-edit-container">
  <h1 class="review-edit-title">Редагувати відгук</h1>

  <%= form_with model: [@product, @review], local: true, class: "review-edit-form" do |f| %>
    <div class="review-edit-form-group">
      <%= f.label :rating, 'Оцінка (1-10):', class: "review-edit-label" %>
      <%= f.number_field :rating, min: 1, max: 10, value: @review.rating, class: "review-edit-input" %>
    </div>

    <div class="review-edit-form-group">
      <%= f.label :content, 'Ваш відгук:', class: "review-edit-label" %>
      <%= f.text_area :content, value: @review.content, class: "review-edit-input" %>
    </div>

    <div class="review-edit-form-group">
      <%= f.label :images, 'Оновити фотографії (за бажанням):', class: "review-edit-label" %>
      <%= f.file_field :images, multiple: true, class: "review-edit-input" %>
      <% if @review.images.attached? %>
        <p class="review-edit-current-images-title">Поточні фото:</p>
        <div class="review-edit-current-images">
          <% @review.images.each do |image| %>
            <%= image_tag image, class: 'review-edit-current-image' %>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="review-edit-form-group">
      <%= f.submit 'Оновити відгук', class: "review-edit-submit-btn" %>
    </div>
  <% end %>

  <%= link_to 'Назад до товару', @product, class: 'review-edit-back-btn' %>
</div>
